{% load i18n tasks %}

<div id="task_main">
{% if not submission %}
    <h3>{% trans 'Tasks' %}</h3>
{% endif %}

{# this form needs an explicit action, because it is used in widgets #}
<form id="{{ form_id }}" action="{% if submission %}{% url ecs.tasks.views.my_tasks submission_pk=submission.pk %}{% else %}{% url ecs.tasks.views.my_tasks %}{% endif %}" method="post" class="open-in-widget">
    <div class="task_list_choose">
        <label class="task_sorting">{% trans "Sort by" %}:</label> {{ filterform.sorting }}
    </div>
    <ul class="task_list_choose">
        <li>{{ filterform.mine }} <label for="id_mine"><span class="task_mine"></span>{% trans "Mine" %}</label></li>
        <li>{{ filterform.assigned }} <label for="id_assigned"><span class="task_assigned"></span>{% trans "Assigned" %}</label></li>
        <li>{{ filterform.open }} <label for="id_open"><span class="task_open"></span>{% trans "Open" %}</label></li>
        <li>{{ filterform.proxy }} <label for="id_proxy"><span class="task_proxy"></span>{% trans "Proxy" %}</label></li>
    </ul>
    <ul class="task_list_choose">
        <li>{{ filterform.past_meetings }} <label for="id_past_meetings"><span class="task_past_meetings"></span>{% trans "Past Meetings" %}</label></li>
        <li>{{ filterform.next_meeting }} <label for="id_next_meeting"><span class="task_next_meeting"></span>{% trans "Next Meeting" %}</label></li>
        <li>{{ filterform.upcoming_meetings }} <label for="id_upcoming_meetings"><span class="task_upcoming_meetings"></span>{% trans "Upcoming Meetings" %}</label></li>
        <li>{{ filterform.no_meeting }} <label for="id_no_meeting"><span class="task_no_meeting"></span>{% trans "No Meeting" %}</label></li>
    </ul>
    <ul class="task_list_choose"{% if submission %} style="display:none"{% endif %}>
        <li>{{ filterform.amg }} <label for="id_amg"><span class="task_amg"></span>{% trans "AMG" %}</label></li>
        <li>{{ filterform.mpg }} <label for="id_mpg"><span class="task_mpg"></span>{% trans "MPG" %}</label></li>
        <li>{{ filterform.thesis }} <label for="id_thesis"><span class="task_thesis"></span>{% trans "thesis" %}</label></li>
        <li>{{ filterform.expedited }} <label for="id_expedited"><span class="task_expedited"></span>{% trans "expedited" %}</label></li>
        <li>{{ filterform.local_ec }} <label for="id_local_ec"><span class="task_local_ec"></span>{% trans "local_ec" %}</label></li>
        <li>{{ filterform.other }} <label for="id_other"><span class="task_other"></span>{% trans "Other" %}</label></li>
    </ul>
</form>

{% if mine_tasks %}
    <div class="task_list">
        <h3>{% trans "My Tasks" %}</h3>
        {% regroup mine_tasks by task_type.workflow_node.uid as task_type_list %}
        {% for task_type in task_type_list %}
            <div class="task_item toggle_collapse">
                <h4><span class="task_type_nr">{{ task_type.list|length }}</span> {{ task_type.grouper|task_type_name }}</h4>
                <ul class="tasks_{{ task_type.grouper }}"> {% for task in task_type.list %} <li>
                    <a href="{{ task.url }}" class="{% if not task.url %}open-in-popup{% endif %}">{{ task.data }}</a>
                </li> {% endfor %} </ul>
                <div style="clear:both;"></div>
            </div>
        {% endfor %}
    </div>
{% endif %}

{% if assigned_tasks %}
    <div class="task_list">
        <h3>{% trans "Tasks assigned to me" %}</h3>
        {% regroup assigned_tasks by task_type.workflow_node.uid as task_type_list %}
        {% for task_type in task_type_list %}
            <div class="task_item toggle_collapse">
                {% if task_type.list|length > 1 %}
                <form class="open-in-widget" method="post" action="{% url ecs.tasks.views.accept_task_type flavor='assigned' slug=task_type.grouper %}{% if submission %}?submission={{ submission.pk }}{% endif %}">
                    <a style="float:right;padding: 0 5px;" class="submit-in-widget" href="">{% trans 'Accept all' %}</a>
                </form>
                {% endif %}
                <h4><span class="task_type_nr">{{ task_type.list|length }}</span> {{ task_type.grouper|task_type_name }}</h4>
                <ul class="tasks_{{ task_type.grouper }}"> {% for task in task_type.list %} <li>
                    <form class="open-in-widget" method="post" action="{% url ecs.tasks.views.accept_task task_pk=task.pk %}{% if submission %}?submission={{ submission.pk }}{% endif %}">
                        <a class="submit-in-widget" href="">{{ task.data }}</a>
                    </form>
                    {% with task.get_preview_url as preview_url %}
                        {% if preview_url %}
                            <a class="preview" title="{% trans "Preview" %}" href="{{ preview_url }}">{% trans "Preview" %}</a>
                        {% endif %}
                    {% endwith %}
                    | 
                    <form class="open-in-widget" method="post" action="{% url ecs.tasks.views.decline_task task_pk=task.pk %}{% if submission %}?submission={{ submission.pk }}{% endif %}">
                        <a class="submit-in-widget" href="">{% trans "Decline" %}</a>
                    </form>
                </li> {% endfor %} </ul>
                <div style="clear:both;"></div>
            </div>
        {% endfor %}
    </div>
{% endif %}

{% if open_tasks %}
    <div class="task_list">
        <h3>{% trans "Open Tasks" %}</h3>
        {% regroup open_tasks by task_type.workflow_node.uid as task_type_list %}
        {% for task_type in task_type_list %}
            <div class="task_item toggle_collapse">
                {% if task_type.list|length > 1 %}
                <form class="open-in-widget" method="post" action="{% url ecs.tasks.views.accept_task_type flavor='open' slug=task_type.grouper %}{% if submission %}?submission={{ submission.pk }}{% endif %}">
                    <a style="float:right;padding: 0 5px;" class="submit-in-widget" href="">{% trans 'Accept all' %}</a>
                </form>
                {% endif %}
                <h4><span class="task_type_nr">{{ task_type.list|length }}</span> {{ task_type.grouper|task_type_name }}</h4>
                <ul class="tasks_{{ task_type.grouper }}"> {% for task in task_type.list %} <li>
                    <form class="open-in-widget" method="post" action="{% url ecs.tasks.views.accept_task task_pk=task.pk %}{% if submission %}?submission={{ submission.pk }}{% endif %}">
                        <a class="submit-in-widget" href="">{{ task.data }}</a>
                    </form>
                    {% spaceless %}
                        {% with task.get_preview_url as preview_url %}
                            {% if preview_url %}
                                <a class="preview" title="{% trans "Preview" %}" href="{{ preview_url }}">{% trans "Preview" %}</a>
                            {% endif %}
                        {% endwith %}
                    {% endspaceless %}
                </li> {% endfor %} </ul>
                <div style="clear:both;"></div>
            </div>
        {% endfor %}
    </div>
{% endif %}

{% if proxy_tasks %}
    <div class="task_list">
        <h3>{% trans "Proxy Tasks" %}</h3>
        {% regroup proxy_tasks by task_type.workflow_node.uid as task_type_list %}
        {% for task_type in task_type_list %}
            <div class="task_item toggle_collapse">
                {% if task_type.list|length > 1 %}
                <form class="open-in-widget" method="post" action="{% url ecs.tasks.views.accept_task_type flavor='proxy' slug=task_type.grouper %}{% if submission %}?submission={{ submission.pk }}{% endif %}">
                    <a style="float:right;padding: 0 5px;" class="submit-in-widget" href="">{% trans 'Accept all' %}</a>
                </form>
                {% endif %}
                <h4><span class="task_type_nr">{{ task_type.list|length }}</span> {{ task_type.grouper|task_type_name }}</h4>
                <ul class="tasks_{{ task_type.grouper }}"> {% for task in task_type.list %} <li>
                    <form class="open-in-widget" method="post" action="{% url ecs.tasks.views.accept_task task_pk=task.pk %}{% if submission %}?submission={{ submission.pk }}{% endif %}">
                        <a class="submit-in-widget" href="">{{ task.data }}</a>
                    </form>
                    {% spaceless %}
                        {% with task.get_preview_url as preview_url %}
                            {% if preview_url %}
                                <a class="preview" title="{% trans "Preview" %}" href="{{ preview_url }}">{% trans "Preview" %}</a>
                            {% endif %}
                        {% endwith %}
                    {% endspaceless %}
                </li> {% endfor %} </ul>
                <div style="clear:both;"></div>
            </div>
        {% endfor %}
    </div>
{% endif %}

{% if not mine_tasks and not assigned_tasks and not open_tasks and not proxy_tasks %}
    <em>{% trans "There are no tasks for you." %}</em>
{% endif %}
</div>

